---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Hero from "../images/HERO.jpeg";
import { Image } from "astro:assets";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="banner">
				<Image src={Hero} alt="kayak at lums pond" />
				<div class="hero-cutout">
					<div class="hero-cutout-1">Friends of</div>
					<div class="hero-cutout-2">Lums Pond</div>
				</div>
				<h1 class="sr-only">Friends of Lums Pond State Park</h1>
			</div>
			<div class="description">
				Welcome to the website of the Friends of Lums Pond State Park. Our Friends Group helps the park as it serves the public.
			</div>
		</main>
		<Footer />
		<style>
			.description {
				font-size: 1.5rem;
				padding: 2rem;
				text-align: center;
			}

			.hero-cutout {
				position: absolute;
				height: 100%;
				width: 100%;
				overflow: hidden;
				z-index: -1;
				background-color: rgba(var(--color-lighter-rgb), 0.8);
				mix-blend-mode: screen;
				text-align: center;
				display: flex;
				flex-direction: column;
				align-items: center;
				align-content: center;
				justify-content: start;
				font-family: var(--font-header);
				text-transform: uppercase;
			}
			.hero-cutout-1 {
				letter-spacing: -0.5rem;
				font-size: max(min(23vw, 24vh), 10rem);
				line-height: max(min(23vw, 24vh), 10rem);
			}
			.hero-cutout-2 {
				letter-spacing: -1rem;
				font-size: max(min(50vw, 54vh), 20rem);
				line-height: max(min(30vw, 40vh), 18rem);
			}

			@media only screen and (max-width: 700px) {
				.hero-cutout {
					justify-content: center;
				}
				.hero-cutout-1 {
					margin-bottom: 0.5rem;
					font-size: max(min(15vw, 15vh), 6rem);
					line-height: max(min(15vw, 15vh), 6rem);
				}
				.hero-cutout-2 {
					font-size: max(min(50vw, 54vh), 15rem);
					line-height: calc(max(min(50vw, 54vh), 15rem) - 5rem);
				}
			}

			main {
				width: 100%;
			}

			.banner {
				height: calc(100vh - 78px);
				width: 100%;
				overflow: hidden;
				position: relative;
				display: flex;
				flex-direction: column;
			}

			.banner > img {
				position: absolute;
				object-fit: cover;
				height: 100%;
				width: 100%;
				z-index: -2;
			}
		</style>
	</body>
</html>
