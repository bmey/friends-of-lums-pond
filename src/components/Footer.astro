---
const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} Friends of Lums Pond, Inc. All rights reserved.
	<div class="social-links">
		<a href="https://www.facebook.com/FriendsofLumsPond" target="_blank">
			<span class="sr-only">Follow Friends of Lums Pond on Facebook</span>
			<i class="fa-brands fa-facebook fa-2x"></i>
		</a>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 4em 1em;
		background: var(--color-lighter);
		color: rgb(var(--color-primary-dark2));
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: var(--primary);
	}
	.social-links a:hover {
		color: rgb(var(--color-primary-dark));
	}
</style>
